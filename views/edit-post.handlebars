<article>

  <form class="edit-post-form mx-5">
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2 class="mt-3">
      Edit Post
    </h2>
    <div class="d-flex flex-column my-2">
      <lable> Title</lable>
      <textarea type="text" id="post-title" type="text">{{post.title}}</textarea>
    </div>
    <div class="d-flex flex-column">
      <lable>Content</lable>
      <textarea type="text" id="post-content" type="text" class="post-content">{{post.content}}</textarea>
    </div>
    <div class="d-flex justify-content-between">
      <button type="submit" class="delete-post-btn btn-primary">Save post</button>
      <button type="button" class="delete-post-btn delbtn btn-primary">Delete post</button>
    </div>
  </form>

</article>

