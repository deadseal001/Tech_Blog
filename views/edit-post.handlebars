      <textarea name="post-content" type="text" class="post-content">{{post.content}}</textarea>
    </div>
    {{!-- <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div> --}}
    <button type="submit" class="delete-post-btn">Save post</button>
    <button type="button" class="delete-post-btn delbtn">Delete post</button>
  </form>

</article>

