<article class="post">
  <div class="title">
    <h4 href="/post/{{id}}" target="_blank">{{title}}</h4>
    <p>{{content}}</p>
  </div>
  <div class="meta">
     by {{user.username}} on {{format_date createdAt}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>